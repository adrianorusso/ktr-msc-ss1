        self.agility=agility
        self.strenght=strenght
        self.wit=wit
        self.RPGClass=RPGClass
        print(name,": May the gods be with me.")
            
    def attack(self,weapon):
        if weapon!="magic" or weapon!="wand":
            print(self.nom,": Doesnt attack")
        else:
            print(self.nom,": Feel the power of my ",weapon)
